---
title: Index in JSON format
description: Required by fuse.js for /search
permalink: /index.json
layout: false
---
[
  {% for post in collections.posts %}
  {
    "title": {{ post.data.title | default: "" | json }},
    "content": {{ post.content | strip_html | strip_whitespace | default: "" | json }},
    "description": {{ post.data.description | default: "" | json }},
    "keywords": {{ post.data.keywords | join: " " | default: "" | json }},
    "tags": {{ post.data.tags | join: " " | default: "" | json }},
    "permalink": "{{ post.url }}"
  }{% if forloop.last == false %},{% endif %}
  {% endfor %}
]
